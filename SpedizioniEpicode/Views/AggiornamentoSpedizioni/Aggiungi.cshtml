@model SpedizioniEpicode.Models.AggiornamentoSpedizione
@{
    ViewBag.Title = "Aggiungi Aggiornamento Spedizione";
}

<h2>Aggiungi Aggiornamento Spedizione</h2>

@using (Html.BeginForm("Aggiungi", "AggiornamentoSpedizioni", new {spedizioneId = Model.SpedizioneId},FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-group">
    @Html.LabelFor(m => m.Stato, new { @class = "control-label" })
    @Html.DropDownListFor(m => m.Stato, new SelectList(new[] { "IN TRANSITO", "IN CONSEGNA", "CONSEGNATO", "NON CONSEGNATO" }), "-- Seleziona stato --", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Stato, "", new {@class="text-danger"})
</div>
    <div class="form-group">
        @Html.LabelFor(m => m.Luogo, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Luogo, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Luogo, "", new {@class="text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Descrizione, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Descrizione, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Descrizione, "", new {@class="text-danger"})
    </div>
    

    @Html.HiddenFor(m => m.SpedizioneId)

    <button type="submit" class="btn btn-primary">Aggiungi Aggiornamento</button>
}

